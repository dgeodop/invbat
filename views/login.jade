extends layout

block content
	.row
		.col-md-6.col-md-offset-3
			h4 Login
			form(action="/login" method="post").form
				div
					label Username:
					select(name="username").form-control
						- each etabl in etabls
							option(value="#{etabl.id_etabl}")
								= etabl.nom_court
				div
					label Password:
					input(type="password" name="password").form-control
				br
				div
					input(type="submit" value="Log In").btn.btn-primary

